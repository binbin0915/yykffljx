<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="60px" android:id="@+id/linear_layout">
	<ImageView android:layout_width="60px" android:layout_height="60px"
		android:id="@+id/image_view" android:layout_gravity="center_vertical"></ImageView>
	<TextView android:layout_width="fill_parent"
		android:layout_height="20px" android:id="@+id/folder_name"
		android:textSize="16px" android:layout_gravity="center_vertical" />
</LinearLayout>
