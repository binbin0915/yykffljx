<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#ffffffff">
	<Button android:id="@+id/defaultToast" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="默认Toast" />
	<Button android:id="@+id/defineToast" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="自定义位置Toast" />
	<Button android:id="@+id/IconToast" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="带图标Toast" />
	<Button android:id="@+id/defineAllToast" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="完全自定义Toast" />
</LinearLayout>
