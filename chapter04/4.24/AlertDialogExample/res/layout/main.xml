<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.android.gif"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#FFFFFFFF">
	<Button android:id="@+id/okCancelBut" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="带ok,cancel按钮的 AlertDialog" />
	<Button android:id="@+id/listBut" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="带列表的 AlertDialog" />
	<Button android:id="@+id/defineBut" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="自定义的 AlertDialog" />
</LinearLayout>