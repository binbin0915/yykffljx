<?xml version="1.0" encoding="UTF-8"?>
	<!-- 兴趣点列表 :列表中每一行的样式 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layoutCenter" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/trippoilistviewbg">
	<!-- 兴趣点图片 -->
	<ImageView android:id="@+id/poiImg" android:layout_width="68px"
		android:layout_height="57px" android:layout_margin="10px" />

	<LinearLayout android:orientation="vertical"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginTop="10px" android:layout_marginRight="10px">

		<TextView android:id="@+id/poiTitle" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#ff000000" />

		<TextView android:id="@+id/poiTel" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#ff000000"
			android:layout_marginTop="5px" android:layout_marginRight="20px" />
	</LinearLayout>
</LinearLayout>
