<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent"  android:background="#ffffffff">
	<!-- 标题行 -->
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_marginTop="5px">
		<TextView android:id="@+id/tripName" android:layout_width="230px"
			android:layout_height="wrap_content" android:layout_marginLeft="5px"
			android:textStyle="bold" android:textColor="#ff000000" 
			android:textSize="17px" android:layout_marginTop="3px" />
		<ImageView android:layout_width="70px"
			android:layout_height="22px" android:layout_marginLeft="10px"
			android:background="@drawable/dzfont" android:layout_marginTop="3px" />
	</LinearLayout>
	<!-- 评论文本域 -->
	<EditText android:id="@+id/tripComment" android:layout_width="299px"
	android:layout_height="70px" android:maxLines="2" android:layout_marginTop="8px"
	android:layout_marginLeft="10px"
	android:textSize="17px" android:background="#D6D6D8"
	/>
	<!-- 点评按钮 -->
	<ImageButton android:id="@+id/commentButt" android:layout_width="50px"
	android:layout_height="21px" android:background="@drawable/dpcomm"
	 android:layout_marginLeft="257px" 
	 android:layout_marginTop="14px" android:layout_marginBottom="13px"/>
	 <!-- 黑色间隔线 -->
		<TextView android:layout_height="1dip" android:background="#ff000000"
			android:layout_width="fill_parent"/>
	<!-- 动态加载评论列表 -->
	<LinearLayout android:id="@+id/commentTripList"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="290px" >
	
	</LinearLayout>
	
</LinearLayout>
