<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#ffffffff">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_marginTop="8px" android:layout_marginBottom="5px"
		android:layout_marginLeft="5px">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="17px"
			android:textStyle="bold" android:layout_gravity="center"
			android:textColor="#ff000000" android:text="  精品线路服务站信息" />
		<ImageView android:layout_width="70px"
			android:layout_height="20px" android:layout_marginLeft="65px"
			android:layout_marginTop="3px" android:background="@drawable/dzfont" />
	</LinearLayout>
	<!-- 搜索行 -->
	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="62px"
		android:layout_marginTop="6px" android:layout_marginBottom="2px">
		<TextView android:layout_width="wrap_content" android:text="省"
			android:layout_height="wrap_content" android:layout_marginLeft="25px"
			android:layout_marginTop="10px" android:textColor="#ff000000" />
		<TextView android:id="@+id/dealerPro" android:layout_width="176px"
			android:layout_height="wrap_content" android:layout_marginTop="7px"
			android:layout_marginLeft="10px" android:background="@drawable/searchedit"
			android:gravity="center_vertical" android:textColor="#ff000000" />

		<ImageButton android:id="@+id/dealerSearch"
			android:layout_width="56px" android:layout_height="24px"
			android:background="@drawable/search" android:layout_marginTop="9px"
			android:layout_marginLeft="10px" />
	</LinearLayout>

	<TextView android:layout_height="1dip" android:background="#ff000000"
		android:layout_width="fill_parent" android:layout_marginBottom="2px" />
	<!-- 动态加载服务区列表 -->
	<LinearLayout android:id="@+id/dealerListLayout"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginLeft="5px">

	</LinearLayout>
</LinearLayout>
